<h1>Create a new user</h1>

<%= form_for @user do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label "Confirm Password" %><br>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit %><br><br>
    
    Already have an account? <%= link_to "Log in", login_path %>

<% end %>